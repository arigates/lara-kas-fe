{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
      "quotes": [2, "single", { "avoidEscape": true }],
        "vue/multi-word-component-names": "off",
        "semi": [2, "always"]
    },
    "globals": {
      "ref": false,
      "storeToRefs": false,
      "useRoute": false,
      "useFetch": false,
      "defineNuxtRouteMiddleware": false,
      "useRouter": false,
      "defineNuxtConfig": false,
      "definePageMeta": false,
      "useHead": false,
      "definePiniaStore": false,
      "useBaseFetch": false
    }
}
